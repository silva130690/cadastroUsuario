@model WebApplication1.Models.Entidades.Usuario

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NomeUsuario)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeUsuario)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd>
            @if (Model.Tipo == 1)
            {
                <label>Administrador</label>
            }
            else
                if (Model.Tipo == 2)
            {
                <label>Técnico</label>
            }
            else
                if (Model.Tipo == 3)
            {
                <label>Usuário Normal</label>
            }

        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Editar", new { id = Model.Id /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Voltar para listagem</a>
</div>
